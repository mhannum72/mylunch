    <script type="text/javascript">

        var map;
        var service;
        var infowindow;
        var latitude;
        var longitude;

        function initialize() {
            var enorth = new google.maps.LatLng(40.876449, -73.325071);

            map = new google.maps.Map(document.getElementById('map'), {
                mapTypeId: google.maps.MapTypeId.ROADMAP,
                center: enorth,
                zoom: 13
            });

            //var bounds = map.getBounds();
            var input = document.getElementById('searchTextField');
            var options = {
                bounds: map.getBounds(),
                types: ['food']
            };

            var autocomplete = new google.maps.places.Autocomplete(input, options);

            var request = {
                location: enorth,
                radius: '5000',
                types: ['food']
            };

            service = new google.maps.places.PlacesService(map);
            service.nearbySearch(request, callback);
        }

        function detailsreq(reference) {
            var service = new google.maps.places.PlacesService(map);
            var request = {
                reference: reference
            };
            service.getDetails(request, function(place, status) {
                if(status == google.maps.places.PlacesServiceStatus.OK) {
                    var details = "";
                    var name = place.name;
                    var address = place.formatted_address;
                    var phone = place.formatted_phone_number;
                    var website = place.website;
                    if(website != undefined) {
                        details = '<a href="' + website + '">' + name + '</a><br>';
                    }
                    else {
                        details = name + '<br>';
                    }
                    details = details + address + '<br>';
                    details = details + phone + '<br>';
                    document.getElementById('details').innerHTML = details;
                }
            });
        }

        function callback(results, status) {

            //var list = document.getElementById('list');
            var places = '<ol>';

            if(status == google.maps.places.PlacesServiceStatus.OK) {
                for(var i = 0 ; i < results.length; i++) {
                    var place = results[i];
                    var reference = place.reference;
                    var refstr = '"javascript:detailsreq(\''+reference+'\')"';
                    var string = '<li><a href="#" onclick='+refstr+'>'+place.name+"</a></li>";
                    places = places + string;
                }
            }

            console.log(places);
            document.getElementById('list').innerHTML = places;
        }

        google.maps.event.addDomListener(window, 'load', initialize);

        if(navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(
                function(position) {
                    latitude = position.coords.latitude;
                    longitude = position.coords.longitude;
                }, 
                function(error) {}, 
                { enableHighAccuracy: true }
            );
        }

    </script>

    <div id='map'></div>
