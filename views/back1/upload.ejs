<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Upload Meal</title>
        <link rel="stylesheet" href="/css/reset.css" />
        <link rel="stylesheet" href="/css/960.css" />
        <link rel="stylesheet" href="/css/text.css" />
        <link rel="stylesheet" href="/css/mealdisp.css" />
    </head>
    <body>
        <div class="container_12">

            <% if (message.length > 0 ) { %>
            <div class="grid_12">
                <i><%= message %></i>
            </div>
            <div class="clear"></div>
            <% } %>

            <div class="grid_4 prefix_8">
                <a href="/editmeals">Edit Meals</a>
            </div>
            <div class="clear"></div>

            <div class="grid_12">
                <center><h2>Upload Meal</h2></center>
            </div>
            <div class="clear"></div>
        </div>

        <% if (user != undefined && user.numPics < user.maxPics) { %>
        <div>
            <%- include attributes_form  %>
        </div>
        <% } else { %> 
        <div class="container_12">
            <div class="grid_12">
                You have reached the maximum number of meals you can upload!
                <!-- XXX upgrade your account link .. -->
                You can either upgrade your account or delete some of the older meals.
            </div>
            <div class="clear"></div>
        </div>
        <% } %>

    </body>
</html>

