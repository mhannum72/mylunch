<div class="container_12">

    <form method="post" enctype="multipart/form-data">

        <% if( undefined != includepath && includepath == true ) { %>
        <div class="grid_4">Path:</div>
        <div class="grid_8">
            <input type="file" name="upload" />
        </div>
        <div class="clear"></div>
        <% } %>

        <div class="grid_4">Title:</div>
        <div class="grid_8">
            <% if(undefined != meal && meal.picTitle != undefined && meal.picTitle.length > 0) { %>
            <input type="text" name="title" value="<%= meal.picTitle %>">
            <% } else { %>
            <input type="text" name="title">
            <% } %>
        </div>
        <div class="clear"></div>

        <% if( user != undefined && undefined != user.isAdmin && user.isAdmin ) { %>
        <div class="grid_4">Name:</div>
        <div class="grid_8">
            <% if(meal != undefined && meal.picName != undefined && meal.picName.length > 0) { %>
            <input type="text" name="picName" value="<%= meal.picName %>">
            <% } else { %>
            <input type="text" name="picName">
            <% } %>
        </div>
        <div class="clear"></div>

        <div class="grid_4">Verified By Admin:</div>
        <div class="grid_8">
            <select name="verifiedByAdmin">

                <% if( meal != undefined && meal.verifiedByAdmin != undefined && meal.verifiedByAdmin ) { %>
                <option value="verified" selected="selected">Verified</option>
                <option value="notverified">Not Verified</option>
                <% } else { %>
                <option value="verified">Verified</option>
                <option value="notverified" selected="selected">Not Verified</option>
                <% } %>

            </select>
        </div>
        <div class="clear"></div>

        <div class="grid_4">Admin Allow:</div>
        <div class="grid_8">

            <select name="adminAllow">

                <% if( meal != undefined && meal.adminAllow != undefined && meal.adminAllow ) { %>
                <option value="allow" selected="selected">Allow WorldView</option>
                <option value="disallow" >Disallow WorldView</option>
                <% } else { %>
                <option value="allow">Allow WorldView</option>
                <option value="disallow" selected="selected">Disallow WorldView</option>
                <% } %>

            </select>

        </div>
        <div class="clear"></div>

        <% } %> <!-- user.isAdmin -->


        <!-- MEAL -->
        <div class="grid_4">Meal:</div>
        <div class="grid_8">
            <select name="meal">

                <% if( meal != undefined && meal.meal != undefined && meal.meal.length > 0 && meal.meal == "breakfast") { %>
                <option value="breakfast" selected="selected">Breakfast</option>
                <% } else { %>
                <option value="breakfast">Breakfast</option>
                <% } %>

                <% if( meal != undefined && meal.meal != undefined && meal.meal.length > 0 && meal.meal == "lunch") { %>
                <option value="lunch" selected="selected">Lunch</option>
                <% } else { %>
                <option value="lunch">Lunch</option>
                <% } %>

                <% if( meal != undefined && meal.meal != undefined && meal.meal.length > 0 && meal.meal == "dinner") { %>
                <option value="dinner" selected="selected">Dinner</option>
                <% } else { %>
                <option value="dinner">Dinner</option>
                <% } %>

                <% if( meal != undefined && meal.meal != undefined && meal.meal.length > 0 && meal.meal == "snack") { %>
                <option value="snack" selected="selected">Snack</option>
                <% } else { %>
                <option value="snack">Snack</option>
                <% } %>

                <% if( meal != undefined && meal.meal != undefined && meal.meal.length > 0 && meal.meal == "other") { %>
                <option value="other" selected="selected">Other</option>
                <% } else { %>
                <option value="other">Other</option>
                <% } %>


            </select>
        </div>
        <div class="clear"></div>

        <div class="grid_4">World Viewable:</div>
        <div class="grid_8">
            <select name="worldViewable">
                <% if( meal != undefined && meal.worldViewable != undefined && meal.worldViewable ) { %>
                <option value="true" selected="selected">World Viewable</option>
                <option value="false">Hidden</option>
                <% } else { %>
                <option value="true">World Viewable</option>
                <option value="false" selected="selected">Private</option>
                <% } %>
            </select>
        </div>

        <div class="grid_4">Rating:</div>
        <div class="grid_8">

            <select name="rating">

                <% if(meal == undefined || meal.rating == undefined || meal.rating == -1) { %>
                <option value="-1" selected="selected">Unrated</option>
                <% } else { %>
                <option value="-1">Unrated</option>
                <% } %>

                <% if(meal != undefined && meal.rating != undefined && meal.rating == 0) { %>
                <option value="0" selected="selected">0 Stars</option>
                <% } else { %>
                <option value="0">0 Stars</option>
                <% } %>

                <% if(meal != undefined && meal.rating != undefined && meal.rating == 1) { %>
                <option value="1" selected="selected">1 Star</option>
                <% } else { %>
                <option value="1">1 Star</option>
                <% } %>

                <% if(meal != undefined && meal.rating != undefined && meal.rating == 2) { %>
                <option value="2" selected="selected">2 Stars</option>
                <% } else { %>
                <option value="2">2 Stars</option>
                <% } %>

                <% if(meal != undefined && meal.rating != undefined && meal.rating == 3) { %>
                <option value="3" selected="selected">3 Stars</option>
                <% } else { %>
                <option value="3">3 Stars</option>
                <% } %>

                <% if(meal != undefined && meal.rating != undefined && meal.rating == 4) { %>
                <option value="4" selected="selected">4 Stars</option>
                <% } else { %>
                <option value="4">4 Stars</option>
                <% } %>

                <% if(meal != undefined && meal.rating != undefined && meal.rating == 5) { %>
                <option value="5" selected="selected">5 Stars</option>
                <% } else { %>
                <option value="5">5 Stars</option>
                <% } %>

            </select>

        </div>
        <div class="clear"></div>

        <!-- RESTAURANT -->
        <div class="grid_4">Restaurant:</div>
        <div class="grid_8">

            <% if(meal != undefined && meal.restaurantName != undefined && meal.restaurantName.length > 0) { %>
            <input type="text" name="restaurantName" value="<%= meal.restaurantName %>">
            <% } else { %>
            <input type="text" name="restaurantName">
            <% } %>

        </div>
        <div class="clear"></div>


        <div class="grid_4">Restaurant Link:</div>
        <div class="grid_8">

            <% if(meal != undefined && meal.restaurantLink != undefined && meal.restaurantLink.length > 0 ) { %> 
            <input type="text" name="restaurantLink" value="<%= meal.restaurantLink %>">
            <% } else { %>
            <input type="text" name="restaurantLink">
            <% } %>

        </div>
        <div class="clear"></div>

        <div class="grid_4">Restaurant Address:</div>
        <div class="grid_8">

            <textarea name="restaurantAddress" type="text">
                <% if(meal!=undefined && meal.restaurantAddress != undefined && meal.restaurantAddress.length > 0) { %>
                <%= meal.restaurantAddress %>
                <% } %>
            </textarea>

        </div>
        <div class="clear"></div>

        <div class="grid_4">Restaurant Phone:</div>
        <div class="grid_8">

            <% if(meal!=undefined && meal.restaurantPhone!=undefined && meal.restaurantPhone.length > 0) { %>
            <input type="test" name="restaurantPhone" value="<%= meal.restaurantPhone %>">
            <% } else { %>
            <input type="test" name="restaurantPhone">
            <% } %>

        </div>
        <div class="clear"></div>

        <div class="grid_4">Notes/Blog:</div>
        <div class="grid_8">
            <textarea name="blog" type="text">
                <% if(meal!=undefined && meal.blog != undefined && meal.blog.length > 0) { %>
                <%= meal.blog %>
                <% } %>
            </textarea>
        </div>
        <div class="clear"></div>

        <% if(meal != undefined && meal.username != undefined && meal.timestamp != undefined ) { %>
        <div class="grid_4">Delete this Meal:</div>
        <div class="grid_8">
            <input type="checkbox" name="deleteMeal" value="<%= meal.username %>/<%= meal.timestamp %>">
        </div>
        <div class="clear"></div>
        <% } %>

        <div class="grid_8 prefix_4">
            <input type="submit" value="Submit" />
        </div>
    </form>
    <div class="clear"></div>

</div> <!-- container_12 -->


