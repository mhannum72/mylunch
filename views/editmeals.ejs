        %>

            pinfo<%= i %> [ <%= j %> ] = new truncPicInfo(
                    <%= pic.timestamp %>,
                    <%= pic.mitimestamp %>,
                    <%= pic.width %>,
                    <%= pic.height %>,
                    <%= pic.thumbwidth %>,
                    <%= pic.thumbheight %>
                );
        <%
                }
            }
        %>

        // Initial minfo array
        minfo[<%= i %>] = new truncMeal(
                "<%= meal.username %>",
                <%= meal.timestamp %>,
                <%= meal.keytimestamp %>,
                "<%= meal.title %>",
                "<%= meal.meal %>",
                <%= meal.mealDate %>,
                pinfo<%= i %>);
        <%
            }
        }
        %>

        </script>
